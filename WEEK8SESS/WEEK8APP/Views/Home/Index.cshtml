@model IEnumerable<WEEK8APP.DTO.User>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center text-black-50">NIDA NUMBER SYSTEM</h3>

<p>
    <a class="btn btn-outline-primary" asp-action="RegisterUser", asp-controller="Home">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NidaNumber)
            </th>
            <th>
                Generate Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NidaNumber)
            </td>
            <td>
                @Html.ActionLink("Get Number", "SetNidaNumber", "Home", new { @class = "btn btn-outline-primary", id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateUserr", "Home", new {@class = "btn btn-outline-primary", id = item.Id }) |
                @Html.ActionLink("Details", "UserDetails", new { @class = "btn btn-outline-primary", id=item.Id  }) |
                @Html.ActionLink("Delete", "DeleteUserr", new { @class = "btn btn-outline-primary", id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
